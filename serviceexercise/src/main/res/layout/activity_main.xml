<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="org.dijack.serviceexercise.MainActivity">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Service Exercise!" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/stop_service" app:layout_constraintRight_toRightOf="@+id/stop_service"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/stop_service"
        app:layout_constraintVertical_bias="0.109"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startService"
        android:text="Start Service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="12dp" />

    <Button
        android:id="@+id/stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:onClick="stopService"
        android:text="Stop Service"
        app:layout_constraintLeft_toLeftOf="@+id/start_service"
        app:layout_constraintRight_toRightOf="@+id/start_service"
        app:layout_constraintTop_toBottomOf="@+id/start_service" />

</android.support.constraint.ConstraintLayout>
